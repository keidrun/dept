{
  "name": "dept",
  "version": "0.1.0",
  "description": "Dependencies templates management CLI to install your fixed NPM or Yarn dependencies and cofing files to your project.",
  "bin": {
    "dept": "build/index.js"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "keywords": [
    "dept",
    "cli",
    "template",
    "npm",
    "yarn",
    "dependencies",
    "devDependencies",
    "config"
  ],
  "repository": "https://github.com/keidrun/dept.git",
  "author": "Keid",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^4.0.0",
    "semver": "^7.3.4",
    "yargs": "16.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.8",
    "@babel/node": "^7.13.0",
    "@babel/preset-env": "^7.13.9",
    "babel-core": "^7.0.0-bridge",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.1"
  },
  "lint-staged": {
    "src/**/**.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testRegex": "(/__test__/.*|(\\.|/)(test|spec))\\.js$",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "scripts": {
    "commit": "git-cz",
    "dev": "NODE_ENV='development' babel-node src/index.js",
    "clean": "rimraf build",
    "build": "yarn clean && babel src --out-dir build",
    "prod": "node build/index.js",
    "test": "jest --coverage",
    "lint": "eslint --fix 'src/**/*.js'",
    "precommit": "lint-staged",
    "semantic-release": "semantic-release"
  },
  "main": "index.js",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
