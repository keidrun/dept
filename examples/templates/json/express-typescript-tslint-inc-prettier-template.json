{
  "dependencies": { "express": "*" },
  "devDependencies": {
    "@types/express": "*",
    "@types/node": "*",
    "husky": "*",
    "lint-staged": "*",
    "prettier": "*",
    "tslint": "*",
    "tslint-config-airbnb": "*",
    "tslint-config-prettier": "*",
    "tslint-plugin-prettier": "v",
    "typescript": "*",
    "typescript-tslint-plugin": "*"
  },
  "files": {
    "tsconfig.json": {
      "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true
      }
    },
    "tslint.json": {
      "defaultSeverity": "error",
      "extends": ["tslint-config-airbnb", "tslint-config-prettier"],
      "jsRules": {},
      "rules": {
        "prettier": [
          true,
          {
            "printWidth": 120,
            "singleQuote": true,
            "semi": true,
            "trailingComma": "es5"
          }
        ]
      },
      "rulesDirectory": ["tslint-plugin-prettier"]
    }
  }
}
